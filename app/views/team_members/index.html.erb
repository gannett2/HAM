<div class="panel panel-default center">
  <h1>The H.A.M. Team</h1>
</div>

<div class="box panel panel-default">
  <div class="panel-body">
    <%= image_tag("teamPicture.jpg", :class => "img-responsive",:alt =>"LOGO", :style => "border: 3px solid #b2b2b2")%>
  </div>
  <div class="panel-footer">
    
  </div>
</div>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Church</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_members.each do |team_member| %>
      <tr>
        <td><%= team_member.name %></td>
        <td><%= team_member.age %></td>
        <td><%= team_member.church %></td>
        <td><%= team_member.bio %></td>
        <td><%= link_to 'Show', team_member %></td>
        <%if team_member.user == current_user %>
          <td><%= link_to 'Edit', edit_team_member_path(team_member) %></td>
          <td><%= link_to 'Destroy', team_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Team Member', new_team_member_path, class: "btn btn-primary" %>
<% end %>

