

<div class="big-box panel panel-default">
	<div class="panel-body">
		<%= image_tag @picture.image.url(:large) =%>
	</div>
	<div class="panel-footer">
		<p>
		  <%= @picture.description %>
		</p>
		<div class="center">
			<% if @picture.user == current_user or current_user.try(:admin?) %>
				<%= link_to 'Edit', edit_picture_path(@picture) %> |
			<%end%>
			<%= link_to 'Back', pictures_path %>
		</div>
	</div>
</div>

<% if @picture.prev %>
	<a class="left carousel-control" >
	  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
	</a>
	<%= link_to 'Prev', @picture.prev, :class => "left carousel-control" %>
<% end %>

<% if @picture.next %>
	<a class="right carousel-control" >
	  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
	</a>
	<%= link_to 'Next', @picture.next, :class => "right carousel-control" %>
<% end %>



